            {
                throw new ApiException("无效参数，请重试！");
            }
            W_ExamPaper Exammodel = Orm.Single<W_ExamPaper>(x => x.ID == model.ID);
            if (Exammodel == null)
            {
                throw new ApiException("未找到对应数据，请刷新重试！");
            }
            Exammodel.Valid = 0;
            return Orm.Update(Exammodel) > 0;
        }
