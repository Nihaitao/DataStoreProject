        /// <date>2017-11-2</date>
        /// <returns></returns>
        [HttpPost]
        public dynamic AddExamPaperDetail(W_ExamPaperDetail model)
        {
            bool flag = false;
            if (model != null && model.ExamPaper_ID > 0)
            {
                flag = mapper.AddExamPaperDetail(model);
            }
            return Success(flag ? "操作成功" : "操作失败");
        }

