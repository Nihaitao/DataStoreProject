        public bool AddExamPaper(W_ExamPaper model)
        {
            if (string.IsNullOrEmpty(model.Title))
            {
                throw new ApiException("试卷名称不能为空");
            }
            using (var session = OpenOrmSession())
            {
                return session.Insert(model, true) > 0;
            }
        }

