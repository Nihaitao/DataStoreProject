        }

        /// <summary>
        /// 获取普通题目信息
        /// </summary>
        /// <param name="id"></param>
        /// <author>nht</author>
        /// <date>2017-11-2</date>
        /// <returns></returns>
        [HttpGet]
        public dynamic GetQuestion(int id)
