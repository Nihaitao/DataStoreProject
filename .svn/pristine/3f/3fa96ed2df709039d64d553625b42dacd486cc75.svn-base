        }

        /// <summary>
        /// 获取组合题目信息
        /// </summary>
        /// <param name="id"></param>
        /// <author>nht</author>
        /// <date>2017-11-2</date>
        /// <returns></returns>
        [HttpGet]
        public dynamic GetQuestionData(int id)
        {
            return Success(mapper.GetQuestionData(id));
        }

        /// <summary>
        /// 获取题目列表
        /// </summary>
        /// <param name="title"></param>
        /// <param name="type"></param>
        /// <param name="store"></param>
        /// <param name="level"></param>
        /// <author>nht</author>
        /// <date>2017-11-2</date>
        /// <returns></returns>
        [HttpGet]
        public dynamic GetQuestionList(string title, int type, int store, int level)
        {
            return Success(mapper.GetQuestionList(title, type, store, level));
        }       

        #endregion

        #region 笔记 created by szf 2017-11-8
